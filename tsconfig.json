{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "types": ["node", "express"]
